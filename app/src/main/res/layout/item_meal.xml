<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/vertical_item_background"
    android:layout_margin="8dp"
    >

    <TextView
        android:id="@+id/txtMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtMealDesc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtMealDesc"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="King Chicken" />

    <TextView
        android:id="@+id/txtMealPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/txtMealName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"

        app:layout_constraintStart_toEndOf="@+id/txtMealName"
        app:layout_constraintTop_toTopOf="@+id/txtMealName"
        app:layout_constraintVertical_bias="0.0"
        tools:text="35.0" />

    <TextView
        android:id="@+id/txtMealDesc"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toEndOf="@+id/imgMeal"
        app:layout_constraintTop_toBottomOf="@+id/txtMealName"
        app:layout_constraintVertical_bias="0.714"
        tools:text="Enjoy this ultra-simple alternative of King Chicken meat, sesame sandwich bread, mayonnaise and chopped lettuce, along with delicious french fries and a drink!" />

    <ImageView
        android:id="@+id/imgMeal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>